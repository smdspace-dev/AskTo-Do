# Environment Configuration
# Application Environment Variables

# Application
VITE_APP_NAME=AI Todo Assistant
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered voice-controlled todo application

# Development
VITE_NODE_ENV=development
VITE_PORT=5173

# Features
VITE_ENABLE_VOICE_RECOGNITION=true
VITE_ENABLE_SPEECH_SYNTHESIS=true
VITE_ENABLE_LOCAL_STORAGE=true

# Voice Configuration
VITE_VOICE_LANGUAGE=en-US
VITE_VOICE_CONTINUOUS=true
VITE_VOICE_INTERIM_RESULTS=true

# UI Configuration
VITE_THEME_DEFAULT=dark
VITE_ANIMATION_DURATION=300

# Debug
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info